@model IEnumerable<Sub_Category>

@{
    ViewBag.Title = "ViewAll";
    Layout = null;
    int Sno = 1;
}

<div class="">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>S.no.</th>
                                        <th>
                                            @Html.DisplayName("Sub Category")
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Categories.Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Status)
                                        </th>
                                        <th>Editors</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Sno</td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Sub_category)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Categories.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Status)
                                            </td>
                                            <td>
                                                <a class="btn btn-primary btn-sm" onclick="Edit('@Url.Action("Edit","Sub_Categories",new { id=@item.ID })')"><i class="fa fa-pencil fa-lg"></i></a>
                                                <a class="btn btn-danger btn-sm" onclick="Delete('@Url.Action("Delete","Sub_Categories",new { id=@item.ID })')"><i class="fa fa-trash fa-lg"></i></a>
                                            </td>
                                        </tr>
                                        Sno++;
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>